<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_shadow"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white">


        <TextView
            android:id="@+id/user_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_white_bottom_line"
            android:gravity="center"
            android:text="切换账号"
            android:textColor="#8dd7fc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_log_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/user_change"
            android:background="@drawable/bg_white_bottom_line"
            android:gravity="center"
            android:text="退出"
            android:textColor="#ff2f2f"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_white_bottom_line"
            android:gravity="center"
            android:text="取消"
            android:textColor="#939393"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>